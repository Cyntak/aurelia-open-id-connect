{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist/amd",
        "target": "es5",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "module": "amd",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
