    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "module": "amd",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
