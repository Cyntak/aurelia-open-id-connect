{
  "name": "aurelia-open-id-connect",
  "description": "An Aurelia adapter for the IdentityModel/oidc-client-js.",
  "version": "0.15.0",
  "author": "Shaun Luttin <shaun@bigfont.ca>",
  "main": "dist/amd/index.js",
  "types": "dist/amd/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaunluttin/aurelia-open-id-connect.git"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "build:tests": "tsc --project tsconfig.test.json",
    "package:clean": "rimraf dist",
    "package:tsc": "tsc",
    "package:html": "cpx src/**/*.html dist/amd",
    "package": "npm run package:clean && npm run package:tsc && npm run package:html",
    "test": "npm run build:tests && jasmine"
  },
  "scripts-comments": {
    "release": "npm run package && git add dist && git commit -m 'Prepare release' && npm version <major | minor | patch>",
    "publish": "npm publish ."
  },
  "jspm": {
    "main": "index.js",
    "directories": {
      "lib": "dist/amd"
    },
    "format": "amd",
    "registry": "npm"
  },
  "license": "MIT",
  "dependencies": {
    "aurelia-fetch-client": "1.x",
    "aurelia-framework": "1.x",
    "aurelia-router": "1.x",
    "babel-polyfill": "6.x",
    "oidc-client": "1.x"
  },
  "devDependencies": {
    "@types/jasmine": "^2.6.0",
    "cpx": "1.x",
    "jasmine": "^2.8.0",
    "tslint": "5.x",
    "tslint-microsoft-contrib": "2.x",
    "typescript": "2.x"
  }
}
