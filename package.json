{
  "name": "aurelia-open-id-connect",
  "description": "An Aurelia adapter for the IdentityModel/oidc-client-js.",
  "version": "0.21.0",
  "author": "Shaun Luttin <shaun@bigfont.ca>",
  "main": "dist/amd/index.js",
  "types": "dist/amd/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaunluttin/aurelia-open-id-connect.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "package:clean": "rimraf dist",
    "package:html": "cpx src/**/*.html dist/amd",
    "package:tsc": "tsc",
    "package": "npm run package:clean && npm run package:tsc && npm run package:html",
    "release": "npm run package && git add dist && git commit -m \"prepare release\"",
    "test": "karma start"
  },
  "scripts-comments": {
    "publish:step:01": "npm run release",
    "publish:step:02": "npm version <major | minor | patch>",
    "publish:step:03": "npm publish .",
    "publish:step:04": "git push --follow-tags"
  },
  "jspm": {
    "main": "index.js",
    "directories": {
      "lib": "dist/amd"
    },
    "format": "amd",
    "registry": "npm"
  },
  "license": "MIT",
  "dependencies": {
    "aurelia-fetch-client": "^1.1.3",
    "aurelia-framework": "^1.1.5",
    "aurelia-router": "^1.4.0",
    "babel-polyfill": "^6.26.0",
    "oidc-client": "^1.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^4.0.0",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "karma": "^1.7.1",
    "karma-cli": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-typescript": "^3.0.8",
    "mocha": "^4.0.1",
    "phantomjs": "^2.1.7",
    "proxyquire": "^1.8.0",
    "sinon": "^4.1.2",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.6.1"
  }
}
